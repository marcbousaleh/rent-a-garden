<div class="my-container">
  <h1>My Bookings</h1>

  <div class="cards-container">
    <% @bookings.each do |booking| %>
        <%= link_to garden_path(booking.garden), class: 'card-link' do %>
          <div class="col-3">
            <%= cl_image_tag booking.garden.photo, height: 200%>
            <div class="card-info">
              <div>
                <h6><strong><%= booking.garden.title %></strong></h6>
                <h6><strong>For the:</strong> <%= booking.start_date%></h6>
                <h6><strong>Duration:</strong>  <%= ((booking.end_date - booking.start_date) / 3600).round %>hrs</h6>
                <h6><strong>Total:</strong>Â£<%= booking.price %></h6>
              </div>
            </div>
          </div>
        <% end %>
    <% end %>
  </div>
</div>


