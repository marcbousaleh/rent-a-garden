<div class="show-container">

  <div class="one-card">
      <%= cl_image_tag @garden.photo, height: 500, width: 800 %>
  </div>

  <div class="information">
    <h2><%= @garden.title %></h2>
    <p><%= @garden.address %></p>
    <p><%= @garden.description %></p>
    <p class="card-garden-pricing">Â£<%= @garden.price %>/hr</p>
  </div>


  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Show Garden on Map
  </button>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= @garden.address %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div
            id="map"
            style="width: 100%;
            height: 500px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          ></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


    <% if policy(@garden).edit? %>
      <%= link_to 'Edit', edit_garden_path(@garden) %>
    <% end %>
    <% if policy(@garden).destroy? %>
      <%= link_to 'Destroy', garden_path(@garden), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

  <% if @garden.owner != current_user %>
    <div class="login-link">
      <%= link_to 'Book this garden', new_garden_booking_path(@garden) %>
    </div>
  <% else %>
    <div class="login-link">
      <%= link_to 'Update your availabilities', new_garden_booking_path(@garden) %>
    </div>
  <% end %>

  <div class="login-link">
    <%= link_to 'Back', gardens_path %>
  </div>
</div>
