<div class="home-container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)),url(<%= asset_url('banner.jpg') %>);">
    <h1>Rent a garden. </h1>
    <p>Gardens for everybody</p>
      <div class="d-flex justify-content-center">
        <%= link_to 'Explore', gardens_path, class: 'btn-basic btn-lg signup-inputs' %>
      </div>
  </div>
  <div class="my-container">
    <h2 id="explore">Gardens in your area: </h2>
    <div class="cards">
      <% @gardens.each do |garden| %>
        <div class="card-garden">
          <%= cl_image_tag garden.photo, height: 300, width: 400, crop: :fill %>
          <div class="card-garden-infos">
            <div>
              <h2><%= garden.title %></h2>
              <p><%= garden.description %></p>
            </div>
            <h2 class="card-garden-pricing">Â£<%= garden.price %>/hr</h2>
          </div>
        </div>
        <% if policy(garden).show? %>
          <%= link_to 'Show garden', garden_path(garden) %>
        <% end %>
        <% if policy(garden).edit? %>
          <%= link_to 'Edit', garden_path(garden) %>
        <% end %>
        <% if policy(garden).destroy? %>
          <%= link_to 'Destroy', garden, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
